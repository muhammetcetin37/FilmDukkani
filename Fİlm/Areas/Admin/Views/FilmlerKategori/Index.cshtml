

@model IEnumerable<FilmlerKategori>


<a class="btn btn-primary" asp-controller="FilmlerKategori" asp-action="Create">Yeni Film</a>
<table class="table table-hover">
    <thead>
        <tr>
          
            <td>@Html.DisplayNameFor(p=>p.Id)</td>
            <td>@Html.DisplayNameFor(p=>p.FilmlerId)</td>
            <td>@Html.DisplayNameFor(p=>p.KategoriId)</td>
            <td>@Html.DisplayNameFor(p=>p.PaketId)</td>
            <td></td>
        </tr>
    </thead>
    <tbody> 
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FilmlerId</td>
                <td>@item.KategoriId</td>
                <td>@item.PaketId</td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="FilmlerKategori" asp-route-id="@item.Id">Sil</a>
                    <a class="btn btn-info" asp-action="Update" asp-controller="FilmlerKategori" asp-route-id="@item.Id">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>

</table>
