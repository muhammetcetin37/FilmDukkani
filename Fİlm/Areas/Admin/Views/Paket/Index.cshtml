
@model IEnumerable<Paket>

<a class="btn btn-primary" asp-action="Create">Yeni Paket</a>
<table class="table table-hover">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(p=>p.Id)</td>
            <td>@Html.DisplayNameFor(p=>p.UyelikModeli)</td>
            <td>@Html.DisplayNameFor(p=>p.Degisim)</td>
            <td>@Html.DisplayNameFor(p=>p.AylikFilmSayisi)</td>
            <td>@Html.DisplayNameFor(p=>p.AylikUcret)</td>
            <td></td>
        </tr>
    </thead>
    <tbody> 
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UyelikModeli</td>
                <td>@item.Degisim</td>
                <td>@item.AylikFilmSayisi</td>
                <td>@item.AylikUcret</td>
                
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Paket" asp-route-id="@item.Id">Sil</a>
                    <a class="btn btn-info" asp-action="Update" asp-controller="Paket" asp-route-id="@item.Id">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>

</table>
