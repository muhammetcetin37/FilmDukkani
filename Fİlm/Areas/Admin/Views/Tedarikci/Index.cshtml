

@model IEnumerable<Tedarikci>

<a class="btn btn-primary" asp-action="Create">Yeni Tedarikci</a>
<table class="table table-hover">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(p=>p.Id)</td>
            <td>@Html.DisplayNameFor(p=>p.Ad)</td>
            <td>@Html.DisplayNameFor(p=>p.Soyad)</td>
            <td>@Html.DisplayNameFor(p=>p.Gsm)</td>
            <td>@Html.DisplayNameFor(p=>p.Email)</td>
            <td>@Html.DisplayNameFor(p=>p.Adres)</td>
            

            <td></td>
        </tr>
    </thead>
    <tbody> 
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.Gsm</td>
                <td>@item.Email</td>
                <td>@item.Adres</td>
                
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Tedarikci" asp-route-id="@item.Id">Sil</a>
                    <a class="btn btn-info" asp-action="Update" asp-controller="Tedarikci" asp-route-id="@item.Id">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>

</table>
