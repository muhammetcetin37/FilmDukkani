

@model IEnumerable<Filmler>


<a class="btn btn-primary" asp-controller="Filmler" asp-action="Create">Yeni Film</a>
<table class="table table-hover">
    <thead>
        <tr>
          
            <td>@Html.DisplayNameFor(p=>p.Id)</td>
            <td>@Html.DisplayNameFor(p=>p.KategoriAdi)</td>
            <td>@Html.DisplayNameFor(p=>p.FilmAdi)</td>
            <td>@Html.DisplayNameFor(p=>p.Aciklama)</td>
            <td>@Html.DisplayNameFor(p=>p.YapimYili)</td>
            <td>@Html.DisplayNameFor(p=>p.AldigiOduller)</td>
            <td>@Html.DisplayNameFor(p=>p.Fiyat)</td>
            <td>@Html.DisplayNameFor(p=>p.EklemeTarihi)</td>
            
          
            <td></td>
        </tr>
    </thead>
    <tbody> 
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.KategoriAdi</td>
                <td>@item.FilmAdi</td>
                <td>@item.Aciklama</td>
                <td>@item.YapimYili</td>
                <td>@item.AldigiOduller</td>
                <td>@item.Fiyat</td>
                <td>@item.EklemeTarihi</td>
               
             
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Filmler" asp-route-id="@item.Id">Sil</a>
                    <a class="btn btn-info" asp-action="Update" asp-controller="Filmler" asp-route-id="@item.Id">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>

</table>
