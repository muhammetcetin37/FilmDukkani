
@model IEnumerable<Sehir>

<a class="btn btn-primary" asp-action="Create">Yeni Sehir</a>
<table class="table table-hover">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(p=>p.Id)</td>
            <td>@Html.DisplayNameFor(p=>p.SehirAdi)</td>
            
            
           
           
            

            <td></td>
        </tr>
    </thead>
    <tbody> 
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.SehirAdi</td>
               
                
                
                
                
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Sehir" asp-route-id="@item.Id">Sil</a>
                    <a class="btn btn-info" asp-action="Update" asp-controller="Sehir" asp-route-id="@item.Id">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>

</table>
